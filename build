#!/usr/bin/env node

// Deployment build script that calls the working build-simple.js
const { execSync } = require('child_process');

console.log('ğŸš€ Starting deployment build...');

try {
  // Execute the proven build-simple.js script
  execSync('node build-simple.js', { stdio: 'inherit' });
  console.log('âœ… Deployment build completed successfully!');
} catch (error) {
  console.error('âŒ Deployment build failed:', error.message);
  process.exit(1);
}