#!/bin/bash

# Deployment Build Script
# This script creates a production-ready deployment bundle

echo "🚀 Starting deployment build..."

# Execute the Node.js build script
node build-simple.js

# Check if build was successful
if [ $? -eq 0 ]; then
    echo "✅ Build completed successfully"
    echo "📁 Deployment files created in dist/ directory"
    echo "   - dist/index.js (server bundle)"
    echo "   - dist/package.json (production config)"
    echo "   - dist/public/ (static assets)"
else
    echo "❌ Build failed"
    exit 1
fi